@model Contact
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Fullname">Name</label>
            <input type="text" value="@Model.Fullname" class="form-control" id="Name" disabled>
            <span asp-validation-for="@Model.Fullname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email">Email</label>
            <input type="text" value="@Model.Email" class="form-control" id="Email" placeholder="Email" disabled>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
     

        <div class="form-group">
            <label asp-for="@Model.Message">Message</label>
            <input value="@Model.Message" class="form-control" disabled id="Message" style="height:150px;padding-bottom:115px" >
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>

    </form>

</div>
