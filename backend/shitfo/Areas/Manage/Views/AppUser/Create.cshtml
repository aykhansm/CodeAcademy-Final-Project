@using Microsoft.AspNetCore.Identity;
@using shitfo.Areas.Manage.ViewModels
@using Microsoft.EntityFrameworkCore;
@model CreateUserViewModel
@inject UserManager<AppUser> user
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
    var userroles = ViewBag.Roles;
}


<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.FullName">Full name</label>
            <input type="text" asp-for="@Model.FullName" class="form-control" id="FullName" placeholder="Full name">
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.UserName">UserName</label>
            <input type="text" asp-for="@Model.UserName" class="form-control" id="UserName" placeholder="UserName">
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email">Email</label>
            <input type="email" asp-for="@Model.Email" class="form-control" id="Email" placeholder="UserName">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input asp-for="@Model.Password" class="form-control" id="Password" rows="3">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.UserRoleId">Role</label>
            <select class="form-control" asp-for="@Model.UserRoleId" asp-items="@(new SelectList(userroles,"Id","Name"))">
            </select>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
